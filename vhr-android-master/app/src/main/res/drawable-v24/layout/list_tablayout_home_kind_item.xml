<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_marginBottom="10dp"
        >
    
    //左侧图片
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:padding="10dp"
            android:layout_weight="9">
        
        <ImageView
                android:id="@+id/home_item_list_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background_05"
                android:background="@color/blue_500"/>
    
    </LinearLayout>
    
    //右侧文字
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="11"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="10"
            >
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                >
            
                <TextView
                        android:id="@+id/home_item_list_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="拍卖品名"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        />
            
                <TextView
                        android:id="@+id/home_item_list_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="拍卖品描述"
                        android:textColor="@color/text_gray"
                        android:textSize="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
    
        </LinearLayout>
    
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
        
            <TextView
                    android:id="@+id/tv_max_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:gravity="right"
                    android:text="当前最高价："
                    android:textStyle="italic"
                    android:textSize="14dp"/>
        
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/text_red"
                    android:text="¥"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />
        
            <TextView
                    android:id="@+id/home_item_list_max_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/text_red"
                    android:text="666"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
    
        </LinearLayout>
    
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                >
        
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="3dp"
                    android:text="发布者"
                    android:textSize="14dp"
                    android:textColor="@color/text_oringe"
                    android:textStyle="italic"
                    />
        
            <TextView
                    android:id="@+id/home_item_list_owner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="发布者名字"
                    android:textSize="14dp"
                    android:textColor="@color/text_gray"
                    android:textStyle="bold"
                    />
    
        </LinearLayout>
    
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                >
    
            <TextView
                    android:id="@+id/home_item_list_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="2023.02.22"
                    android:textSize="14dp"
                    android:textColor="@color/text_oringe"
                    android:textStyle="bold"
                    />
        
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:text="截止"
                    android:textSize="14dp"
                    android:textColor="@color/text_gray"
                    android:textStyle="italic"
                    />
    
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>